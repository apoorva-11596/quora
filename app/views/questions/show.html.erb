<div class="container">

<div class="card z-depth-3">
	<div class="card-content brown darken-1">
       <span class="card-title" data-confirm="are you sure?" style="color: white;"><%= @question.text%></span>
    </div>
</div>







<% @question.answers.order("votes DESC").each() do|answer|%>
	<%=render 'answer', :answer => answer%>
<%end%>

<%=form_for(@answer, :url => answer_question_path(@question)) do|f|%>
	<div class="field">
    	<%= f.label :answer %><br>
    	<%= f.text_field :text, required: true %>
  	</div>

  	<div class="actions">
    	<%= f.submit %>
  	</div>
<%end%>
</div>
