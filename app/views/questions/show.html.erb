<div class="container">

	<div class="card-content white">
       <span class="card-title" data-confirm="are you sure?" style="color: brown; font-size: 50px; font-weight:400;"><%= @question.text%></span>
       <div id="answer">
       <section id="section" class="show">
        <a href="#section"class="waves-effect waves-light btn" style="font-size: 20px; padding-bottom: 40px;"><i class="medium material-icons">mode_edit</i>ANSWER</a>
        <div>
            <div class="card z-depth-3" style="background-color:#efebe9 ;">
            <div class="card-content brown lighten-2">
            <span class="card-title" style="height: 100px; display: flex;align-items: center;">
            <div style="padding-right: 20px;"><%= image_tag user_image_url(@user),class: "avatar circle"%></div>
            <div><p style="color: white; font-size: 30px;">As: <%=@user.name%></p></div>
            </span>
            </div>
            <div class="card-action text">
            <%=form_for(@answer, :url => answer_question_path(@question)) do|f|%>
           <div class="row">
           <div class="input-field col s12 field">
                <%= f.label :answer %><br>
                <%= f.text_field :text, required: true %>
            </div>
            </div>
            <div class="btn waves-effect waves-light action">
              <%= f.submit %>
            </div>
              <%end%>
              </div>
              </div>
        </div>
       </section>
  </div>
  </div>

  <div id="ans_count">
  <% if @question.answers.count==1 %>
      1 Answer
      <% else %>
        <%= @question.answers.count%> Answers
  <% end %>
  </div>
  <div id="horizontal_line"></div>

<% @question.answers.order("votes ASC").each() do|answer|%>
	<%=render 'answer', :answer => answer%>
  <div id="horizontal_line"></div>
<%end%>


</div>
