 <div class="answer">
 	<div>
 		<p style="font-size: 23px;">A: <%= answer.text%></p>
 	</div>
 	<div>
 		<p style="padding-left:20px;">Author: <%= answer.user.name %></p>
 		<div>
 			<% if user_signed_in? %>
 				<%= form_for(@answer, :url => "/users/upvote/#{answer.id}" )do|f|%>
 					<% if user_voted(answer) %>
  						<%= f.submit "Downvote" %>
  					<%else%> 
 						<%= f.submit "Upvote" %>
  					<%end%>
 				<%end%>
 			<%end%>
 			Votes: <%=answer.votes%>
 		</div>
	</div>
 </div>


 