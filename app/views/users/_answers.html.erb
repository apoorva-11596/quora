<div class="card z-depth-3" style="height: 200px;margin-bottom: 20px;">
	<div class="card-content brown darken-1">
       <span class="card-title"><%= link_to Question.find_by_id(answer.question_id).text, question_path(Question.find_by_id(answer.question_id)),class: "color" %></span>
     </div>
    <div class="card-action text">
        	<div style="display:flex;align-items:center;"><%= image_tag user_image_url(answer.user),class: "avatar pic circle"%>
 		<p style="margin-left: 20px;"><%=answer.user.name%><br>Uploaded on <%=answer.user.created_at%></p>
 		</div>
 	</div>
</div>
 